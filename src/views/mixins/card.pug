mixin card(product)
        div(class="catalogCard")
            div(id="catalogImg")
                img(src="/" + product.fileUrl, alt="catalogeImg")
            div(id="catalogId")
                span #{product.title}
            div(id="catalogTxt")
                span #{product.part} &#47;
                span #{product.material}
                br
                if !product.basicWage
                    span 0 &#47;
                else
                    span #{product.basicWage} &#47;
                if !product.additionWage
                    span  0
                else
                    span #{product.additionWage}
               
                br
                if !product.weight
                    span #{product.goldWeight} &#47;
                else    
                    span #{product.weight} &#47;
                
                if !product.stoneWeight
                    span  0
                else
                    span #{product.stoneWeight}

            div(class="clickBox")
                div(class="clickbxbx")
                    input(name="click", value=`${product._id}`  , class="clickThis", type="checkbox")
                a(class="rmvBtn", href=`/cataloge/edit/${product._id}`) 
