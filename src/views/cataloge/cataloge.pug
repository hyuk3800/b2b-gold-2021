extends ../base.pug
include ../mixins/card
include ../mixins/table


block links
    link(rel="stylesheet", href="/static/css/cataloge/cataloge.css")
    link(rel="stylesheet", href="/static/css/components/footer.css")

block scripts 
    script(defer, src="/assets/js/catalogeMain.js") 


block content  
    div(class="container", id="src_and_crt")
        div(class="row")
            div(class="col-md-6")
                form(class="searchigbox", method="GET")
                    input(type="text", class="searching", name="keyword", placeholder="검색어를 입력하세요")
                    button(id="btn_searching", type="submit") 
                        i(class="las la-search")
            div(class="col-md-6")
                div(class="buttonbox")
                    div(class="click_box")
                        button(onClick="location.href='/cataloge/upload'") 제품등록
        div(class="row wjscpbox")
            div(class="wjscp")
                a(href="")
                    img(src="../../../static/images/ic-info-outline-24-px.png", alt="도움")
                if products
                    span 전체 #{products.length} 개 
                else
                    span 전체 #{user.products.length} 개 
                span(id="wjscpNum", class="hidden") (n) 개 선택됨
        div(class="row")
            div(class="col-3")
                div(class="filterbtn")
                    button 필터
            div(class="col-9 bro_box")
                div(class="card_bro brobx on") 카드형식
                div(class="table_bro brobx") 테이블형식
    form(method="POST" id="catalogePost")     
        div(class="container")
            div(class="catalog_card")
                div(class="row")
                    div(class="col-2")
                        div(class="clickAndChack")
                            img(src="../../../static/images/select_off.png", alt="select_off")
                            img(src="../../../static/images/select_on.png", alt="select_on")
                            span 전체선택
                    div(class="col-10")
                        div(class="selectbox")
                            select(name="page-view-counter", id="select10_50") 
                                option(value="10View") 10View
                                option(value="20View") 20View
                                option(value="30View") 30View
                                option(value="50View") 50View
                            span 선택 목록보기
                div(class="mainContainerCard on", id="cardTest")
                    if products   
                        each product in products 
                            +card(product)
                        else    
                            div 
                    else 
                        each product in user.products 
                            +card(product)
                        else    
                            div 
                div(class="mainContTable")
                    table(id="tableTest")
                        thead 
                            tr 
                                th(rowspan="2")
                                    div
                                        input(type="checkbox", name="clickThis", id="clickThis") 
                                th(rowspan="2") 모델
                                th(rowspan="2") 함량
                                th 금중량
                                th(rowspan="2") 개당알수
                                th(colspan="2") 공임단가
                                th(rowspan="2") 수량
                                th(colspan="3") VAT별도
                            tr 
                                th 알중량
                                th 기/추
                                th 중/보
                                th 공임함
                                th 금값
                                th 소계
                        if products
                            each product in products
                                +table(product)
                            else 
                                div
                        else   
                            each product in user.products 
                                +table(product)
                            else 
                                div
                div(class="col-12")
                    div(class="numlist")
                        div(class="numnum on")
                            span 1
            nav(class="bot")
                div(class="container")
                    div(class="row")
                        div(class="col-12")
                            div(class="botbox")
                                ul(class="botmnul") 
                                    button#hold(type="hidden",name="hold", value="hold")
                                    li 
                                        img(src="../../../static/images/삭제하기.png", alt="삭제하기")
                                        input.moveBtn(type="submit", name="deleteBtn", value="삭제하기")
                                    li 
                                        img(src="../../../static/images/공임변경.png", alt="공임 변경")
                                        span#onbutton 공임 변경
                                    li 
                                        img(src="../../../static/images/재고등록.png", alt="재고 등록")
                                        input.moveBtn(value="재고 등록", type="submit", name="movestock")
                                    li 
                                        img(src="../../../static/images/주문등록.png", alt="주문 등록")
                                        input.moveBtn(value="주문 등록", type="submit", name="moveorder")
                                    li 
                                        img(src="../../../static/images/주문등록.png", alt="수리 등록")
                                        input.moveBtn(value="수리 등록", type="submit", name="moverepair")
                                    li 
                                        img(src="../../../static/images/판매등록 (1).png", alt="판매 등록")
                                        input.moveBtn(value="판매 등록", type="submit", name="movesale")
                                    li 
                                        img(src="../../../static/images/대여등록 (1).png", alt="대여 등록")
                                        input.moveBtn(value="대여 등록", type="submit", name="moverent")

    include ../partials/footer
        div#wagebox(class="")
            div#wageboxcent
            div.wagewage.container
                div.row.wage1
                    div.col-12
                        span 공임비 일괄 수정
                div.row.wage2
                    div.col-12.wageInput
                        label(for="basicWage") 
                            span 기본 공임
                        div
                            input(type="number", name="basicWage", form="catalogePost" id="basicWage", placeholder="입력") 
                        span 원
                    div.col-12.wageInput
                        label(for="additionWage") 
                            span 추가 공임
                        div
                            input(type="number", name="additionWage", form="catalogePost" id="additionWage", placeholder="입력") 
                        span 원
                div.row.wage3
                    .col-12
                        span 변경할 가격을 적어주세요 <br> ex)-4000 or 4000
                div.row.wage4
                    div.col-12
                        button(type="button", id="offbutton") 닫기
                        button(name="wage", type="submit" form="catalogePost" value="수정") 수정